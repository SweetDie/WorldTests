<Page x:Class="WorldTests.Client.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WorldTests.Client.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Page.Background>
        <SolidColorBrush Color="{StaticResource ColorBackground}"/>
    </Page.Background>

    <DockPanel>
        <DockPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="WORLD OF TESTS" FontSize="50" FontWeight="Bold" Margin="20" DockPanel.Dock="Top"
                       Foreground="{StaticResource TitleColor}"
                       FontFamily="{StaticResource Lobster}"/>
            <StackPanel>
                <Button Content="Play tests" Margin="10" Click="PlayTestsButtonClick"/>
                <Button Content="Create test" Margin="10" Click="CreateTestButtonClick"/>
                <Button Content="Settings" Margin="10"/>
                <Button Content="Quit" Margin="10" Click="QuitButtonClick"/>
            </StackPanel>
        </DockPanel>
    </DockPanel>
</Page>
