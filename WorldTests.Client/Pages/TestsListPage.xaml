<Page x:Class="WorldTests.Client.Pages.TestsListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:controls="clr-namespace:WorldTests.Client.Resources.Controls"
      xmlns:local="clr-namespace:WorldTests.Client.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TestsListPage">

    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
            <Button Content="Back" Width="{StaticResource ButtonWidth200}" Margin="10" Click="BackButtonClick"/>
            <Button Content="Refresh" Width="{StaticResource ButtonWidth200}" Margin="10" Click="RefreshButtonClick"/>
        </StackPanel>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <WrapPanel x:Name="wrapPanel" HorizontalAlignment="Center">
            </WrapPanel>
        </ScrollViewer>
    </DockPanel>
</Page>
